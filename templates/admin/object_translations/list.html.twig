{% trans_default_domain 'sfs_translation' %}

{% extends extended_template %}

{% block translations %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">{{ 'admin_translations.list.fields.key.header'|trans }}</th>
            <th scope="col">{{ 'admin_translations.list.fields.domain.header'|trans }}</th>
            <th scope="col">{{ 'admin_translations.list.fields.default_locale.header'|trans }}</th>
            <th scope="col">{{ 'admin_translations.list.fields.default_message.header'|trans }}</th>
            <th scope="col">translations</th>
            <th scope="col">&nbsp;{#{{ 'admin_translations.list.actions.header'|trans }}#}</th>
{#            <th>&nbsp;</th>#}
        </tr>
        </thead>

        <tbody>
        {% include '@SfsTranslation/admin/object_translations/list-page.html.twig' %}
        </tbody>

        {% if translations.pages|default(false) %}
            <tfoot>
            <tr>
                <td colspan="20">
                    {% if translations.prevPage %}
                        <a href="{{ url('sfs_translation_admin_translations_list', app.request.query.all|merge({ page: translations.prevPage })) }}" title="Prev page"><span class="mdi mdi-24px mdi-chevron-left"></span></a>
                    {% endif %}

                    {% if translations.nextPage %}
                        <a class="float-right" href="{{ url('sfs_translation_admin_translations_list', app.request.query.all|merge({ page: translations.nextPage })) }}" title="Next page"><span class="mdi mdi-24px mdi-chevron-right"></span></a>
                    {% endif %}
                </td>
            </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock translations %}