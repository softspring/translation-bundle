{% trans_default_domain 'sfs_translation' %}
{% extends '@SfsTranslation/admin_layout.html.twig' %}
{% block title %}{{ 'admin_translations.read.page_title'|trans }}{% endblock %}

{% block breadcrums_content %}
    {{ parent() }}
    <li class="breadcrumb-item"><a href="{{ url('sfs_translation_admin_translations_list') }}">{{ 'admin_translations.list.breadcrumb'|trans }}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ 'admin_translations.read.breadcrumb'|trans({'%name%': translation.name|default(translation.id) }) }}</li>
{% endblock breadcrums_content %}

{% block content %}
    <h1 class="h3 mb-4">{{ translation.name }}</h1>
{% endblock content %}